<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
<display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>WeaponServlet</servlet-name>
    <servlet-class>Servlets.WeaponServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>WeaponServlet</servlet-name>
    <url-pattern>/weapons</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>MainServlet</servlet-name>
    <servlet-class>Servlets.MainServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>MainServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AddWeaponServlet</servlet-name>
    <servlet-class>Servlets.AddWeaponServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AddWeaponServlet</servlet-name>
    <url-pattern>/addWeapon</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ChengeWeaponServlet</servlet-name>
    <servlet-class>Servlets.ChengeWeaponServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ChengeWeaponServlet</servlet-name>
    <url-pattern>/changeWeapon</url-pattern>
  </servlet-mapping>

</web-app>
